###############################################################################

set -ue

###############################################################################

export CLEAN='(\!|\\|\;|\^|\,|#|\"|\~|\{|\}|\[|\]|\?|\*|\?|<|>|\(|\)|\&|\$|`)'
export GARGS="\"${*}\""

###############################################################################

if [ "${GARGS:?}" = '""' ]; then
    unset GARGS
else
    GARGS=$(
        printf '%s' "${GARGS:?}"       \
            | sed 's/.$//; s/^.//'     \
            | grep -E -sv "${CLEAN:?}" \
            || {
                printf '%s' '__ERROR__'
            }
    )
fi

###############################################################################

if [ -n "${GARGS:-}" ]; then
    if [ "${GARGS:-}" = "__ERROR__" ]; then
        printf '%s\n' "Error: Invalid arguments."
        exit 1
    else
        if [ "${GARGS:-}" = "-" ] \
            || [ "${GARGS:-}" = "'" ]; then
            printf '%s\n' "Error: Invalid argument."
            exit 1
        else
            export ALL="--all"
        fi
    fi
else
    unset ALL
fi

###############################################################################

git remote                     \
    | grep -E -sv "${CLEAN:?}" \
    | xargs -I '{}' -s 50000   \
        printf '%s\n' '{}'     \
    | xargs -I '{}' -s 100000  \
        sh -c "printf \"%s\n\" \
             git\ push\ -u\ \"${ALL:-}\"\ \"{}\"\ \"${GARGS:-}\"
		   | sh -x && printf \"%s\n\" git\ push\ --tags\ \"{}\"\ \"${GARGS:-}\"
		   | sh -x"

###############################################################################
